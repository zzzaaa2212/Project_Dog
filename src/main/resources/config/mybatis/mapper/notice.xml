<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="notice">
	
	 <select id="notice_list" resultType="vo.NoticeVO" parameterType="java.util.Map">
        SELECT * FROM (
            SELECT rank() over (order by notice_regdate DESC) as no, o.*
            FROM notice o
        )
        WHERE no BETWEEN #{start} AND #{end}
    </select>
	 
	
	<insert id="notice_insert" parameterType="vo.NoticeVO">
		insert into notice values(
			idx_notice_seq.nextVal, 
			#{notice_title}, 
			#{notice_name}, 
			#{notice_content},
			#{notice_pwd},
			0,
			0,
			sysdate
		)
	</insert>
	
	
	 <!-- 게시글 한건 조회 -->
	<select id="select_one" parameterType="int" resultType="vo.NoticeVO">
		select * from notice
		 where notice_idx=#{notice_idx}
	</select>
	
	 
     <update id="notice_update_readhit" parameterType="int">
		update notice set
		notice_readhit = notice_readhit + 1
		where notice_idx = #{notice_idx}
		
	 </update>
	 
	 <select id="notice_count" resultType="int"
           parameterType="java.util.Map">
           
      select count(*) from notice
      
      
   </select>
    
    
